<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.kongk.wenda.dao.QuestionDao">

    <sql id="common-column">
        id, title, content, user_id, anonymous, status, comment_count, create_date
    </sql>
    <sql id="insert-column">
        (title, content, user_id, anonymous, status, create_date)
    </sql>
    <sql id="insert-values-column">
        (#{title}, #{content}, #{userId}, #{anonymous}, #{status}, #{createDate})
    </sql>


    <insert id="addUser" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
      insert into user
      <include refid="insert-column"/>
      values
      <include refid="insert-values-column"/>
    </insert>

    <insert id="addQuestion" keyProperty="id" useGeneratedKeys="true">
        insert into question
        <include refid="insert-column"/>
        values
        <include refid="insert-values-column"/>
    </insert>

    <select id="getUserList" resultType="top.kongk.wenda.model.User">
      select * from user;
    </select>
    <select id="getUserList2" resultType="top.kongk.wenda.model.User">

    </select>



    <select id="getUserByName" resultType="top.kongk.wenda.model.User">
      select
      <include refid="common-column"/>
      from user
      where name = #{name}
    </select>

    <select id="getUserByEmail" resultType="top.kongk.wenda.model.User">
      select
      <include refid="common-column"/>
      from user
      where email = #{email}
    </select>

    <select id="getQuestionById" resultType="top.kongk.wenda.model.Question">
        SELECT
        <include refid="common-column"/>
        from question
        where id = #{id}
    </select>
</mapper>